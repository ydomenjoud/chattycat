<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title | default('Chattycat') }} </title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/styles.css">

</head>
<body>

<!-- header -->
<header class="container">

    <div>
        <a href="/" id="logo">
            <img src="/assets/img/cat.png" alt="cat" width="62" height="120"/>
            <img src="/assets/img/logo.png" alt="logo" width="300" height="120"/>
        </a>
        <a id="burger" class="mobile">
            <img src="assets/img/header/burger.svg">
        </a>
    </div>
    <nav>
        <!--{%- for age in collections.ages %}-->
        <!--    {{ age.data.page.url }}-->
        <!--{%- endfor %}-->
        <a href="/ages/3-6.html">
            <img src="/assets/img/header/3-6.png" alt="3-6 ans" width="118" height="150">
            <img src="/assets/img/header/3-6-hover.png" height="150" class="display_on_hoover" alt="3-6 ans hover">
        </a>
        <a href="/ages/6-8.html">
            <img src="/assets/img/header/6-8.png" alt="6-8 ans" width="118" height="150">
            <img src="/assets/img/header/6-8-hover.png" class="display_on_hoover" alt="6-8 ans" width="118" alt="6-8 ans hover">
        </a>
        <a href="/ages/8-10.html">
            <img src="/assets/img/header/8-10.png" alt="8-10 ans" width="130" height="153">
            <img src="/assets/img/header/8-10-hover.png" class="display_on_hoover" width="130" alt="8-10 ans hover">
        </a>
        <a href="/ages/10.html">
            <img src="/assets/img/header/10-plus.png" alt="10 ans et plus" width="123" height="153">
            <img src="/assets/img/header/10-plus-hover.png" class="display_on_hoover" width="123" alt="10 ans et plus hover">
        </a>
    </nav>

</header>

<!-- navigation -->
{% set active_page = active_page|default('index') -%}
<nav class="container">
    <a style="width: 150px" href="{{ collections.concept[0].data.page.url }}" {%- if active_page == "concept" %} class="active"{% endif %}>concept</a>
    <a style="width: 180px" href="{{ collections.catalogue[0].data.page.url }}" {%- if active_page == "catalogue" %} class="active"{% endif %}>catalogue</a>
    <a style="width: 160px" href="{{ collections.ateliers[0].data.page.url }}"  {%- if active_page == "atelier" %} class="active"{% endif %}>ateliers</a>
    <label>
        <img src="/assets/img/header/search.png" alt="search" width="28" height="28"/>
        <input type="search" id="search_text" placeholder="titre/auteur/mot clé/genres/thèmes..."/>
    </label>
    <button id="search_button">rechercher</button>
    <div id="searched_books_container"></div>
</nav>

<!-- main content -->
<main class="{{ mainClass }}">
    {{ content | safe }}
</main>

<footer>
    <div id="footer1">
        <div class="container">
            <div style="width: 220px">
                <ol>
                    <li><a href="{{ collections.series_list[0].data.page.url }}">les séries</a></li>
                    <li><a href="{{ collections.auteurs_list[0].data.page.url }}">les auteurs</a></li>
                    <!--<li><a>envoyez votre manuscrit</a></li>-->
                    <li><a href="{{ collections.contact[0].data.page.url }}">nous contacter</a></li>
                </ol>
            </div>
            <div id="follow_box">
                <img src="/assets/img/home/CHATTYCAT-logo-chat-blanc.png" alt="chattycat logo" width="69" height="69">
                <div>
                    <p>Suivez-nous</p>
                    <div id="follow_buttons">
                        <a href="https://www.facebook.com/chattycatbooks/" target="_blank"></a>
                        <a href="https://www.instagram.com/editionschattycat/" target="_blank"></a>
                        <a href="https://twitter.com/chattycatbooks" target="_blank"></a>
                    </div>
                </div>
            </div>
            <div id="newsletter_box">
                <label for="newsletter_email">Inscrivez-vous à la newsletter !</label>
                <div>
                    <input type="search" id="newsletter_email" placeholder="email"/>
                        <button id="newsletter_button">envoyer</button>
                </div>
            </div>
        </div>
    </div>
    <div id="footer2">
        <div class="container">
            <p>CHATTYCAT © 2020</p>
            <a href="">MENTIONS LÉGALES</a>
        </div>
    </div>
</footer>

<script src="/assets/js/index.js"></script>

<div id="mobileNav">
    <a id="closeBurger">Close</a>
    <nav>
        <a href="{{ collections.concept[0].data.page.url }}" {%- if active_page == "concept" %} class="active"{% endif %}>concept</a>
        <a href="{{ collections.catalogue[0].data.page.url }}" {%- if active_page == "catalogue" %} class="active"{% endif %}>catalogue</a>
        <a href="{{ collections.ateliers[0].data.page.url }}"  {%- if active_page == "atelier" %} class="active"{% endif %}>ateliers</a>
        <a href="{{ collections.series_list[0].data.page.url }}">les séries</a></li>
        <a href="{{ collections.auteurs_list[0].data.page.url }}">les auteurs</a></li>
        <a href="{{ collections.contact[0].data.page.url }}">nous contacter</a></li>
    </nav>
</div>


</body>
</html>
