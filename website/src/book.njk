---
tags: books
pagination:
    data: global.books
    size: 1
    alias: book
    addAllPagesToCollections: true
eleventyComputed:
    title: "{{book.title}}"
permalink: "books/{{ book.slug }}.html"
---

<div class="container">
    <div id="book_presentation">
        <div>
            {%- if book.image %}
                {% remoteImage book.image, "plop", {widths: [312]} %}
                {% remoteImage book.image, "plop", {widths: [90]} %}
            {%- endif %}
        </div>

        <div>
            <div>
                <h1>{{ book.collection }}</h1>
                <h2>{{ book.title }}</h2>
                <h5>{{ book.author1 }}</h5>
                <h5>{{ book.illustrator }}</h5>
            </div>
            <div>
                <h3>{{ book.introduction }}</h3>
            </div>
        </div>
    </div>

    <div id="book_presentation_bottom">
        <div id="book_presentation2">
            <div>
                <div id="themes">
                    {% set list = book.themes.split(', ') %}
                    {%- for theme in list %}
                        <p>{{theme}}</p>
                    {%- endfor %}
                </div>
                <h4>Résumé</h4>
                <p>{{ book.summary }}</p>
            </div>
        </div>
        <div id="book_badges">
            <a class="age_cat" href="/ages/{{ book.age_cat }}.html">
                <span>
                    {{ book.age }}<span class="f{{ book.age_cat }}"> ans</span>
                </span>
                <span class="ico">v</span>
            </a>
            <div>
                <h3>EXTRAIT</h3>
            </div>
            <div>
                <button>LIVRE AUDIO</button>
            </div>
        </div>
    </div>

    <section id="book_informations">

        <article id="links" >
            <h5>Où trouver ce livre ?</h5>
            <ul>
                <li ><a href="">Parislibrairies.fr</a></li>
                <li ><a href="">Placedeslibraires.fr</a></li>
                <li ><a href="">Sauramps</a></li>
                <li ><a href="">leslibraires.fr</a></li>
                <li ><a href="">Amazon</a></li>
                <li ><a href="">la Fnac</a></li>
                <li ><a href="">Cultura</a></li>
                <li ><a href="">Decitre</a></li>
                <li ><a href="">Furet du Nord</a></li>
                <li ><a href="">Eleclerc</a></li>
                <li ><a href="">Chapitre</a></li>
                <li ><a href="">La Procure</a></li>
                <li ><a href="">LIbrairie Dialogue</a></li>
                <li ><a href="">Libraires Ensembles</a></li>
            </ul>
        </article>

        <article id="caracs">
            <h4>Caractéristiques</h4>
           <table>
               <tr>
                   <td>Titre</td>
                   <td>{{ book.title }}</td>
               </tr>
               <tr>
                   <td>Auteur(s)</td>
                   <td>{{ book.author1 }}</td>
               </tr>
               <tr>
                   <td>Illustrateur(s)</td>
                   <td>{{ book.illustrator }}</td>
               </tr>
               <tr>
                   <td>Série</td>
                   <td>{{ book.collection }}</td>
               </tr>
               <tr>
                   <td>Genre</td>
                   <td>{{ book.genre }}</td>
               </tr>
               <tr>
                   <td>Date de parution</td>
                   <td>{{ book.date | fdate  }}</td>
               </tr>
               <tr>
                   <td>Nombre de pages</td>
                   <td>{{ book.pages}}</td>
               </tr>
               <tr>
                   <td>Dimensions</td>
                   <td>-----</td>
               </tr>
               <tr>
                   <td>Support</td>
                   <td>------</td>
               </tr>
               <tr>
                   <td>ISBN / EAN</td>
                   <td>{{ book.ean}}</td>
               </tr>
           </table>
        </article>
    </section>

</div>
